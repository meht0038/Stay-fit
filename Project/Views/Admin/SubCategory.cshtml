
@{
    ViewBag.Title = "SubCategory";
    Layout = "~/_LayoutAdmin.cshtml";
}

<br />
<form action="SaveSubCategory" method="post" enctype="multipart/form-data">
    <div class="panel panel-default" style="margin-right:20px;margin-left:20px">
        <div class="panel-heading">Add Sub Category</div>
        <div class="panel-body">
            <fieldset class="input">


                <p id="login-form-username">
                    <label for="modlgn_username">Main Category Name</label>
               @Html.DropDownList("MainC",ViewBag.NameList as IEnumerable<SelectListItem>, "Please select", new {  @class = "form-control"})           
                </p>
                <p id="login-form-username">
                    <label for="modlgn_username">Sub Category Name</label>
                    <input id="modlgn_username" type="text" placeholder="Select your Category" name="SubCategoryName" class="inputbox" size="18">
                </p>
               


                <div class="clear"> </div>
                <p id="login-form-username">
                    <input type="submit" style="float:left" name="Submit" class="button" value="Save"><div class="clear"></div>
                </p>



            </fieldset>
        </div>
    </div>
</form>
