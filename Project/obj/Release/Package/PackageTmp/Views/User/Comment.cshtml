
@model List<Project.Models.Blog>
@{
    ViewBag.Title = "Comment";
    Layout = "~/_LayoutUser.cshtml";
}




@foreach (var s in Model)
{

    string BlogImage = "data:image/jpg;base64," + Convert.ToBase64String((byte[])@s.BlogImage);
    <div class="blog_box">
        <div class="blog_grid">
            <h3><a href="blog_single.html">@s.BlogTitle </a></h3>
            <h3><a href="blog_single.html">@s.Email</a></h3>
            <a href="blog_single.html"><img src='@BlogImage' width="400" height="400" controls></a>
            <div class="singe_desc">
                <p>@s.BlogDescription</p>
                <div class="comments">
                    <ul class="links">
                        <li><a href="#"><i class="blog_icon1"> </i><br><span>@s.BlogDate</span></a></li>
                        <li><a href="#"><i class="blog_icon3"> </i><br><span>@s.Likes</span></a></li>
                        <li><a href="#"><i class="blog_icon4"> </i><br><span>@s.Comments</span></a></li>
                    </ul>
                    <div class="btn_blog">
                        <a href="Comment?id=@s.Email">Read More</a>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
}



@{
    try
    {
        Class1 c = new Class1();
        System.Data.DataSet ds = new System.Data.DataSet();
        ds = c.selectDATA("select * from Comment where BlogId='" + Request.QueryString["id"] + "' ");

        for (int i = 0; i < ds.Tables[0].Rows.Count; i++)
        {
            <div class="panel panel-default" style="margin-right:20px;margin-left:20px">
                <div class="panel-heading">@ds.Tables[0].Rows[i]["Name"].ToString()</div>
                <div class="panel-body">
                    @ds.Tables[0].Rows[i]["CommentDescription"].ToString()
                </div>
            </div>

        }
    }
    catch
    {

    }


}




<form action="SaveComment" method="post" enctype="multipart/form-data">
    <div class="panel panel-default" style="margin-right:20px;margin-left:20px">
        <div class="panel-heading">Comment</div>
        <div class="panel-body">
            <fieldset class="input">
                <p id="login-form-username">
                    <label for="modlgn_username">Name</label>
                    <input id="modlgn_username" type="text" placeholder="Enter Name" name="Name" class="inputbox" size="18">
                </p>

                <p id="login-form-username">
                    <label for="modlgn_username">Email</label>
                    <input id="modlgn_username" type="text" placeholder="Enter Email" name="Email" class="inputbox" size="18">
                </p>

                <p id="login-form-username">
                    <label for="modlgn_username">Comment</label>
                    <input id="modlgn_username" type="text" placeholder="Enter CommentDescription" name="CommentDescription" class="inputbox" size="18">

                    <input type="hidden" name="Blogid" id="Blogid" value="@Request.QueryString["id"]" />
                </p>
                <p id="login-form-username">
                    <input type="submit" style="float:left" name="Submit" class="button" value="Upload"><div class="clear"></div>
                </p>
            </fieldset>
        </div>
    </div>
</form>

